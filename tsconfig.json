{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./test/@types/",
      "./node_modules/@types"
    ],
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.spec.ts",
    "docs"
  ]
}