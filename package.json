{
  "name": "lumis",
  "version": "0.0.1",
  "description": "",
  "author": "Nicholas Mordecai",
  "url": "https://github.com/megmut/lumis",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lumis": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "mocha --require ts-node/register test/**/*.spec.ts",
    "test:watch": "mocha --require ts-node/register --watch --watch-files test/**/*.spec.ts,src/**/* test/**/*.spec.ts",
    "lint": "eslint --ext .ts . --fix",
    "dev:start": "NODE_ENV=dev ts-node src/cli/index.ts -f ./dev/types/**/*",
    "dev:watch": "NODE_ENV=dev nodemon --watch 'dev/**' --ignore /dev/compiled/** --ext 'ts,d.ts' --exec ts-node src/cli/index.ts -f ./dev/types/**/*"
  },
  "dependencies": {
    "@faker-js/faker": "^7.5.0",
    "chalk": "^5.0.1",
    "ts-morph": "^16.0.0",
    "typescript": "^4.8.2",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.15",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "chai": "^4.3.6",
    "eslint": "^8.23.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1"
  }
}
